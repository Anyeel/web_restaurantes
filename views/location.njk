{% extends "base.njk" %}
{% block content %}
<div id="map" style="height: 400px;"></div>
<script>
    var map = L.map('map').setView([37.1556821, -3.5949996], 12);

    L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);

    L.marker([37.15, -3.59]).addTo(map)
        .bindPopup('Restaurante Juanmita')
        .openPopup();
</script>
{% endblock %}

